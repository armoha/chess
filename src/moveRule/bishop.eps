import loc;
import board;

function moveBishop(unitPlayer, unitCellX, unitCellY) {
  const opponentPlayer = (unitPlayer == $P7) ? $P8 : $P7;

  var x, y;

  const initialXList = [
    unitCellX - 1,
    unitCellX - 1,
    unitCellX + 1,
    unitCellX + 1
  ];

  const initialYList = [
    unitCellY - 1,
    unitCellY + 1,
    unitCellY - 1,
    unitCellY + 1
  ];

  const dxList = [
    -1,
    -1,
    1,
    1
  ];

  const dyList = [
    -1,
    1,
    -1,
    1
  ];

  for (var i = 0 ; i < 4 ; i++) {
    x = initialXList[i];
    y = initialYList[i];
    while (1 <= x && x <= 8 && 1 <= y && y <= 8) {
      const otherCellPlayer = board.getBoard(x, y)[[0]];
      if (otherCellPlayer == 0) {
        loc.moveCLoc(x, y); CreateUnit(1, 'Cursor', 'cLoc', unitPlayer);
      } else if (otherCellPlayer == unitPlayer) break;
      else if (otherCellPlayer == opponentPlayer) {
        loc.moveCLoc(x, y); CreateUnit(1, 'Cursor', 'cLoc', unitPlayer);
        break;
      }
      x += dxList[i];
      y += dyList[i];
    }
  }
}