import loc;
import board;

function moveKnight(unitPlayer, unitCellX, unitCellY) {
  const opponentPlayer = (unitPlayer == $P7) ? $P8 : $P7;

  var x, y;

  const initialXList = [
    unitCellX - 1,
    unitCellX - 2,
    unitCellX - 2,
    unitCellX - 1,

    unitCellX + 1,
    unitCellX + 2,
    unitCellX + 2,
    unitCellX + 1
  ];

  const initialYList = [
    unitCellY - 2,
    unitCellY - 1,
    unitCellY + 1,
    unitCellY + 2,

    unitCellY + 2,
    unitCellY + 1,
    unitCellY - 1,
    unitCellY - 2,
  ];


  for (var i = 0 ; i < 8 ; i++) {
    x = initialXList[i];
    y = initialYList[i];

    if (1 <= x && x <= 8 && 1 <= y && y <= 8) {
      const otherCellPlayer = board.getBoard(x, y)[[0]];
      if (otherCellPlayer == 0) {
        loc.moveCLoc(x, y); CreateUnit(1, 'Cursor', 'cLoc', unitPlayer);
      } else if (otherCellPlayer == unitPlayer);
      else if (otherCellPlayer == opponentPlayer) {
        loc.moveCLoc(x, y); CreateUnit(1, 'Cursor', 'cLoc', unitPlayer);
      }
    }
  }
}
